{
    "app-id": "org.example.protondrive",
    "runtime": "org.gnome.Platform",
    "runtime-version": "45",
    "sdk": "org.gnome.Sdk",
    "command": "protondrive",
    "finish-args": [
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--device=all",
        "--filesystem=home",
        "--talk-name=org.freedesktop.Notifications"
    ],
    "modules": [
        {
            "name": "rclone",
            "buildsystem": "simple",
            "build-commands": [
                "install -D rclone /app/bin/rclone"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://downloads.rclone.org/v1.65.0/rclone-v1.65.0-linux-amd64.zip",
                    "sha256": "9a9f29ed242baec12d423e4cf21b1322ebac1fe738d72f64a3b1b4a45c94b4bf",
                    "strip-components": 1
                }
            ]
        },
        {
            "name": "protondrive",
            "buildsystem": "simple",
            "build-commands": [
                "install -D src/main.py /app/bin/protondrive",
                "install -D src/controller.py /app/bin/controller.py",
                "install -D src/interface.ui /app/bin/interface.ui",
                "chmod +x /app/bin/protondrive"
            ],
            "sources": [
                {
                    "type": "dir",
                    "path": "."
                }
            ]
        }
    ]
}